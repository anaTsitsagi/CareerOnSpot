@page "/contact"

<main class="relative py-20 px-4 sm:px-6 bg-white overflow-hidden">
    <!-- Decorative half-circle in the top-right -->
    <div class="absolute -right-32 -top-32 w-96 h-96 rounded-full bg-gradient-to-tr from-red-500 to-blue-400 opacity-20 pointer-events-none">
    </div>

    <div class="relative max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- LEFT: Contact card + QR -->
        <div class="space-y-8">
            <h2 class="text-4xl font-bold text-gray-900">Contact Us</h2>

            <!-- Gradient info card -->
            <div class="bg-gradient-to-r from-red-500 to-blue-400 text-white rounded-3xl p-8 space-y-6">
                <!-- LinkedIn -->
                <div class="flex items-center">
                    <!-- Replace with your LinkedIn SVG or icon component -->
                    <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M4.98 3C3.34 3 2 4.34 2 5.98c0 1.64 1.34 2.98 2.98 2.98S7.96 7.62 7.96 5.98C7.96 4.34 6.62 3 4.98 3zm.02 4.8H3V21h4V7.8H5zM9 7.8v13.2h4v-7.2c0-2 2-2 2 0v7.2h4v-8.4c0-4-4-3.8-6 0V7.8H9z" />
                    </svg>
                    <div class="ml-4 space-y-1">
                        <a href="https://www.linkedin.com/in/joannakaminska"
                           target="_blank"
                           class="block font-semibold hover:underline">
                            Joanna Kaminska
                        </a>
                        <a href="https://www.linkedin.com/in/hokumag"
                           target="_blank"
                           class="block font-semibold hover:underline">
                            Hokuma Guluzade
                        </a>
                    </div>
                </div>

                <!-- Email -->
                <div class="flex items-center">
                    <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M2 4a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v16a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V4zm2 0v.01L12 13 20 4.01V4H4zm16 2.35L12.28 12.9a1 1 0 0 1-1.28 0L4 6.35V20h16V6.35z" />
                    </svg>
                    <span class="ml-4 font-medium">info@careeronspot.com</span>
                </div>

                <!-- Location -->
                <div class="flex items-center">
                    <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7zm0 9.5a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5z" />
                    </svg>
                    <span class="ml-4 font-medium">Online or Kraków</span>
                </div>
            </div>

            <!-- QR code -->
            <div class="mt-4 flex justify-center lg:justify-start">
                <img src="/images/instagram-qr.png"
                     alt="CareerOnSpot Instagram QR"
                     class="w-48 h-48 bg-white p-4 rounded-xl shadow-lg" />
            </div>
        </div>

        <!-- RIGHT: Mobile screenshot -->
        <div class="flex justify-center lg:justify-end">
            <img src="/images/contact-mobile.png"
                 alt="CareerOnSpot on mobile"
                 class="w-80 lg:w-[350px] rounded-3xl shadow-2xl" />
        </div>
    </div>
</main>
